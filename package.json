{
  "name": "oro-github-cli",
  "version": "0.1.0",
  "description": "Github CLI to automatize agile-management actions",
  "type": "module",
  "bin": {
    "ogh": "bin/ogh"
  },
  "scripts": {
    "start": "node bin/ogh",
    "test": "echo \"No tests specified\"",
    "coverage": "jest --coverage",
    "coverage:open": "node coverage.open.js",
    "coverage-open": "jest --coverage && node coverage.open.js",
    "lint": "eslint .",
    "prettier": "prettier --write .",
    "clean": "rm -Rf ./bin",
    "clean:all": "rm -Rf ./bin ./node_modules ./coverage",
    "check:all": "npm run lint && npm run build && npm run coverage",
    "update:deps": "node update-deps.js",
    "build": "tsup",
    "watch": "nodemon"
  },
  "keywords": [
    "github-cli",
    "agile",
    "management"
  ],
  "author": "Carlos Oropesa <carlos@oropensando.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oropesa/oro-github-cli.git"
  },
  "bugs": {
    "url": "https://github.com/oropesa/oro-github-cli/issues"
  },
  "homepage": "https://github.com/oropesa/oro-github-cli#readme",
  "dependencies": {
    "axios": "^1.13.1",
    "fs-extra": "^11.3.2",
    "keytar": "^7.9.0",
    "oro-functions": "^2.4.5",
    "yargs": "^18.0.0",
    "yargs-interactive": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.38.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@types/yargs": "^17.0.33",
    "@types/yargs-interactive": "^2.1.6",
    "babel-jest": "^30.2.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  }
}
